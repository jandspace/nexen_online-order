			&.listview {
				table.search-table {
					background-color: transparent !important;

					tbody {
						tr {

							@mixin sm-min {
								&:nth-child(even) {
									background-color: #E6E6E6;
								}
							}

							@mixin md-min {
								transition: background-color 0.8s ease;
								&:hover {
									background-color: rgba(255,146,67,0.15);
								}
							}
						}
					}

					th,
					td {
						line-height: 1.1;

						&[class*='cell-'] {
							width: calc(100% / 10);
						}

						span {
							a {
								font-weight: $font-weight-bold;
								text-decoration: underline;
							}
							&[class*='cd-type'] {
								font-weight: $font-weight-medium;
								border: 0;
								color: $color-white;
								background-color: $color-grey-h;
								padding: 6px;
								margin: -6px 0;
								text-align: center;

								@mixin sm-min {
									padding: 6px;
									
								}
							}
							&.cd-type-invoice {
								
							}
							&.cd-type-credit {
								background-color: #1fd175;
							}
							&.cd-type-debit {
								background-color: #f59e42;
							}
						}
					}
				}

				@mixin xs-max {
					table.search-table {
						tbody {
							tr{

								td {

									span {
										&[class*='cd-type'] {
											width: 97.5%;
										}
									}

									&:nth-child(-n+2) {
										float: none;
										width: 100% !important;
									}

									/* &:first-child {
										width: 50% !important;
										float: left;
										span {
											display: block;
										}
									} */
								}
							}
						}
					}					
				}
			}
		}
	}
}